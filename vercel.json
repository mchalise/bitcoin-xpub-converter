{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      // Specify the NPM module that is used for the build
      "use": "@now/node"
    },
  "routes": [
    {
      // Specify which paths will route to a destination using a regex
      "src": "/(.*)",
      // Specify the paths' destination
      "dest": "index.js"
    }
  ]
  ]
}